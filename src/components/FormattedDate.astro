---
import dayjs from 'dayjs';

interface Props {
  dateString: string;
}

const { dateString } = Astro.props;
const date = dayjs(dateString).toDate();
---

<time datetime={date.toISOString()}>
  {
    date.toLocaleDateString("ja-jp", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
